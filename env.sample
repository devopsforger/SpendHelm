# =========================
# Application
# =========================
APP_NAME=SpendHelm
APP_HOST=0.0.0.0
APP_PORT=8000
APP_V1_STR=/api/v1
APP_VERSION=1.0.0
APP_DESCRIPTION=The ultimate spending tracker application.
ENVIRONMENT=development

# =========================
# Security / JWT
# =========================
# IMPORTANT:
# Use a long, random, high-entropy value in real environments
JWT_SECRET_KEY=change-this-to-a-long-random-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================
# Database (PostgreSQL)
# =========================
DB_HOST=localhost
DB_PORT=5432
DB_USER=spendhelm
DB_PASS=spendhelm_password
DB_NAME=spendhelm_db

POSTGRES_DB=spendhelm_db 
POSTGRES_USER=spendhelm
POSTGRES_PASSWORD=spendhelm_password

MAX_CONNECTIONS=10
TIMEOUT_SECONDS=5.0
RUN_MIGRATIONS=true

# =========================
# CORS
# =========================
# Comma-separated list of allowed origins
# Use "*" only in local development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =========================
# Authentication / Rate Limiting
# =========================
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHAR=true
REQUIRE_NUMBER=true
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
MAX_LOGIN_ATTEMPTS=5
AUTH_RATE_LIMIT=5/minute

# =========================
# Miscellaneous
# =========================
DEBUG_MODE=false
LOG_LEVEL=DEBUG
TIMEZONE=UTC
LOCALE=en_US.UTF-8
